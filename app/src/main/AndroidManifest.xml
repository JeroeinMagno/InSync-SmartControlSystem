<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="InSync"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InSyncSmartControlSystem"
        tools:targetApi="31">

        <!-- Splash Activity set as the launcher activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity">
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".LoginActivity">
        </activity>

        <activity
            android:name=".ForgotPasswordActivity">
        </activity>

        <activity
            android:name=".SignupActivity">
        </activity>

        <!-- Dashboard Activity -->
        <activity
            android:name=".DashboardActivity">
        </activity>

        <!-- IoT-Related Activities -->
        <activity
            android:name=".OverviewActivity">
        </activity>

        <activity
            android:name=".SensorsActivity">
        </activity>

        <activity
            android:name=".NetworkingActivity">
        </activity>

        <activity
            android:name=".CloudComputingActivity">
        </activity>

        <activity
            android:name=".SecurityActivity">
        </activity>

        <activity
            android:name=".DataManagementActivity">
        </activity>

        <activity
            android:name=".EdgeComputingActivity">
        </activity>

        <activity
            android:name=".AnalyticsActivity">
        </activity>

        <activity
            android:name=".ApplicationsActivity">
        </activity>

        <activity
            android:name=".StandardsActivity">
        </activity>

        <!-- About Activity -->
        <activity
            android:name=".AboutActivity">
        </activity>

    </application>

</manifest>
